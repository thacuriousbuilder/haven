{
  "name": "haven-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "client": "npm run start --workspace=apps/client",
    "trainer": "npm run start --workspace=apps/trainer",
    "client:tunnel": "npm run start:tunnel --workspace=apps/client",
    "trainer:tunnel": "npm run start:tunnel --workspace=apps/trainer",
    "build:client:android": "cd apps/client && eas build --platform android --profile development",
    "build:client:ios": "cd apps/client && eas build --platform ios --profile development",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {},
  "dependencies": {
    "expo": "~54.0.33",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
